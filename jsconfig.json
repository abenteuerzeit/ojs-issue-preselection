{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2020", "DOM"],
        "module": "ESNext",
        "moduleResolution": "node",
        "allowJs": true,
        "checkJs": false,
        "noEmit": true,
        "types": ["cypress"],
        "typeRoots": ["./node_modules/@types", "./cypress/support"]
    },
    "include": ["cypress/**/*.js", "cypress/**/*.d.ts", "*.js"],
    "exclude": ["node_modules", "dist", "build"]
}
